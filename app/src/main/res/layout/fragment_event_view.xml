<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a8adaa"
        tools:context=".MainActivity">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#434543">

                    <ImageView
                            android:id="@+id/backButton"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/baseline_west_24"
                            />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="#FFFFFF"
                    android:layout_height="match_parent">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                    <ImageView
                            android:id="@+id/eventImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    <TextView
                            android:id="@+id/titleText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:text=""
                            android:textColor="#4071b2"
                            android:gravity="center"
                            android:textSize="38sp"
                            android:textStyle="bold" />


                    <TextView
                            android:id="@+id/dateText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/descriptionText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/eventLinkText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:text=""
                            android:textColor="#000000"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingTop="20dp"
                            android:paddingBottom="10dp"
                            android:orientation="horizontal">

                        <ImageView
                                android:id="@+id/downloadButton"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/baseline_file_download_24"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:text="Download ticket"
                                />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:map="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    />

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout >